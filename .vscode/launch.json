{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "üöÄ Debug Bot",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
                "PLAYWRIGHT_BROWSERS_PATH": "${workspaceFolder}/playwright-browsers"
            },
            "stopOnEntry": false
        },
        {
            "name": "üé≠ Debug with Playwright Tracing",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
                "PLAYWRIGHT_BROWSERS_PATH": "${workspaceFolder}/playwright-browsers",
                "DEBUG": "pw:*",
                "PWDEBUG": "1"
            },
            "stopOnEntry": false
        },
        {
            "name": "üß™ Debug Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${workspaceFolder}/tests",
                "-v",
                "--tb=long",
                "-s"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "üîç Debug Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "ü§ñ AI-Assisted Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
                "AI_DEBUG_MODE": "true",
                "VERBOSE_LOGGING": "true"
            },
            "stopOnEntry": false,
            "logToFile": true
        }
    ]
}
